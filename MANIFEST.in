# Include root documentation and metadata files
include CHANGELOG.md
include README.md
include LICENSE
include pyproject.toml
include setup.py

# Include HTML report assets
recursive-include vscode_scanner/html_report/assets *.css *.js

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so

# Exclude development files
exclude CLAUDE.md
exclude .gitignore
exclude *.json
prune .git
prune .claude
prune .github
prune docs
prune node_modules
prune temp
prune tests
prune scripts
