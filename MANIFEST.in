# Include root documentation and metadata files
include README.md
include LICENSE
include pyproject.toml
include setup.py

# Include scripts directory for version management
recursive-include scripts *.py

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so

# Exclude development files
exclude .gitignore
exclude *.json
prune .git
prune .claude
prune .github
prune docs
prune node_modules
prune temp
prune tests
